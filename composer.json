{
  "name": "webmonkeyhu/simplepay-php",
  "description": "OTP SimplePay composer package SDK",
  "type": "library",
  "license": "GNUv3",
  "authors": [{
    "name": "Tamás András Horváth",
    "email": "hello@webmonkey.hu"
  }],
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  },
  "autoload": {
    "psr-4": {
